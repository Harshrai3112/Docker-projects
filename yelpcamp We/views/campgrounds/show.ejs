<% include  ../partials/header.ejs%>
<div class="container my-4">
    <div class="row ">
        <div class="col-md-3">
            <h3 class="display-4">YelpCamp</h3>
              <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item ">Info 2</li>
                <li class="list-group-item ">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="text-center">
                <img  src="<%= camps.image %>" class="img-thumbnail img-fluid " alt="This is <%= camps.name%>">
            </div>
            <br>
            <em><sub>Posted By <%= camps.author.username%></sub></em>
            <div class="caption-full">
                <h4 class="text-right">$9.0/night</h4>
                <h4><a href=""><%= camps.name %></a></h4>
                <p><%= camps.description%></p>
            </div>
            
            <% if(currentUser && camps.author.id.equals(currentUser.id)){ %>
            <div>
                <a href="/campgrounds/<%= camps._id%>/edit" class="btn btn-outline-info ">Edit</a>
                <form class="delete-form" action="/campgrounds/<%= camps._id%>?_method=DELETE" method="POST" >
                    <button class="btn btn-outline-danger" >Delete</button> 
                </form>
            </div>
            <% } %>
            <p class="" style="margin-left:44rem;"><a href="/campgrounds/<%= camps._id%>/comments/new" class="btn btn-outline-success ">Add Comment</a></p>
            
            <% camps.comments.forEach(function(comment){ %>
                <div class="row card">
                    <div class="col-md-12 card-body">
                        <strong class="card-title"><%= comment.author.username %></strong>
                        <!-- <span class="justify-content-right">10 days ago</span> -->
                        <p class="card-body">
                            <%= comment.text %> 
                        </p>
                       <% if(currentUser && comment.author.id.equals(currentUser.id)){ %>
                        <div >
                        <a href="/campgrounds/<%= camps._id%>/comments/<%= comment._id%>/edit" class="btn-sm btn btn-outline-primary">Edit </a>
                        <form class="delete-form" action="/campgrounds/<%= camps._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-outline-danger btn-sm" >Delete</button>
                        </form>
                        </div>
                        <% }%>
                    </div>
                </div>
            <% }) %>
        
        </div>
    </div>
            
</div>



