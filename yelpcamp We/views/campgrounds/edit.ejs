<% include ../partials/header.ejs %>
<h1 class="text-center display-4 text-secondary my-4">Edit <%= camp.name%></h1>
<div class="container">
        <form action="/campgrounds/<%= camp._id%>?_method=PUT " class="my-5" method="POST" >
            <div class="d-flex justify-content-center">
                    <div class="form-group  " >
                            <input class="form-control " type="text" value="<%= camp.name%>" name="camps[name]" placeholder="Name">
                     </div>
            </div>
            <div class="d-flex justify-content-center">
                        <div class="form-group row " >
                            <input  class="form-control"  value="<%= camp.image%>"  type="text" name="camps[image]" placeholder="image url">
                        </div>
            </div>
            <div class="d-flex justify-content-center">
                        <div class="form-group row " >
                            <input  class="form-control"   value="<%= camp.description%>" type="text" name="camps[description]" placeholder="Description">
                        </div>
            </div>
            <div class="d-flex justify-content-center">
                    <button class="btn btn-primary " style="width:30%;" type="submit"> Edit campground</button>
            </div>
            <a href="/campgrounds">Go Back</a>
        </form>
</div>
</div>

<br>
