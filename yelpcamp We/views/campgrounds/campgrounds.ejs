<% include ../partials/header.ejs%>

<div class="container my-5">
    <div class="jumbotron">
        <h1 >Welcome to YelpCamp!</h1>
        <p>This are the places where you can enjoy with your friends</p>
        <a href="/campgrounds/new" class="btn btn-primary">Add campgrounds</a>
    </div>
    <div class="row">
            <% camps.forEach((camp)=>{%>
              <div class="col-lg-4 col-md-6">
                    <img class =" img-thumbnail" src="<%= camp.image %>">
                    <p class="text-center caption" ><%=camp.name%></p>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary " style="margin-left:120px;">More Info</a>
              </div>
            <%})%>
            
    </div>
   <br>
   
    <% include ../partials/footer.ejs %>
</div>