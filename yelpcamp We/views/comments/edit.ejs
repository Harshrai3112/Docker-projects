<% include ../partials/header.ejs %>
<h1 class="text-center display-4 text-secondary my-4">Edit Comment</h1>
<div class="container">
    
        <form action="/campgrounds/<%= camp._id%>/comments/<%= comment._id%>?_method=PUT " class="my-5" method="POST" >
            <div class="d-flex justify-content-center">
                    <div class="form-group  ">
                            <textarea class="form-control "  name="comment[text]"  placeholder="Comment"><%= comment.text%></textarea>
                    </div>
            </div>
           
            
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary " style="width:40%;" type="submit"> Edit Comment</button>
            </div>
            <a href="/campgrounds">Go Back</a>
        </form>
</div>
</div>

